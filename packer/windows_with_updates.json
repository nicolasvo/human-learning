{
  "builders": [
    {
      "type": "hyperv-iso",
      "name": "hyperv",
      "output_directory": "output-HyperV-{{user `build_name`}}",
      "boot_wait": "0s",
      "communicator": "winrm",
      "configuration_version": "9.0",
      "cpus": "{{user `cpus`}}",
      "memory": "{{user `memory`}}",
      "disk_size": "{{user `disk_size`}}",
      "enable_secure_boot": true,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./base/floppy/setup-winrm.ps1",
        "./base/floppy/disable-screensaver.ps1",
        "./base/floppy/microsoft-updates.bat",
        "./base/floppy/windows-updates.ps1"
      ],
      "guest_additions_mode": "disable",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "switch_name": "{{user `hyperv_switchname`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "administrator",
      "winrm_password": "vagrant"
    },
    {
      "type": "vmware-iso",
      "name": "vmware",
      "display_name": "{{ user `build_name` }}",
      "output_directory": "output-VMWare-{{user `build_name`}}",
      "boot_wait": "60s",
      "communicator": "winrm",
      "cpus": "{{user `cpus`}}",
      "memory": "{{user `memory`}}",
      "disk_adapter_type": "lsisas1068",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "{{user `disk_type_id_vmware`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./base/floppy/setup-winrm.ps1",
        "./base/floppy/disable-screensaver.ps1",
        "./base/floppy/microsoft-updates.bat",
        "./base/floppy/windows-updates.ps1"
      ],
      "guest_os_type": "windows9srv-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": "{{user `iso_url`}}",
      "version": 14,
      "vm_name": "{{user `build_name`}}",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "vhv.enable": "{{user `vhv_enable`}}",
        "ide1:0.clientdevice": "FALSE",
        "ide1:0.present": "TRUE",
        "ide1:0.devicetype": "cdrom-image",
        "ide1:0.filename": "{{pwd}}\\{{user `vmware_tools_iso_path`}}"
      },
      "vmx_data_post": {
        "ide0:0.present": "false",
        "ide1:0.present": "false"
      },
      "vmx_remove_ethernet_interfaces": false,
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "administrator",
      "winrm_password": "vagrant"
    }
  ],
  "post-processors": [],
  "provisioners": [
    {
      "type": "powershell",
      "script": "./base/vmware-tools/scripts/setup-vmware-tools.ps1",
      "only": [
        "vmware"
      ]
    },
    {
      "type": "windows-restart",
      "only": [
        "vmware"
      ]
    },
    {
      "type": "breakpoint"
    },
    {
      "type": "powershell",
      "script": "./base/scripts/provision-base.ps1"
    },
    {
      "type": "breakpoint"
    },
    {
      "type": "powershell",
      "script": "./base/scripts/cleanup-image.ps1"
    },
    {
      "type": "powershell",
      "inline": [
        "Rename-Computer -NewName {{user `computer_name`}}",
        "Get-LocalUser -Name \"Administrator\" | Set-LocalUser -Password $(ConvertTo-SecureString -String \"{{user `admin_password`}}\" -AsPlainText -Force)",
        "Stop-Computer -Force"
      ]
    },
    {
      "type": "breakpoint",
      "pause_before": "60s",
      "disable": "true",
      "only": [
        "hyperv"
      ]
    }
  ],
  "variables": {
    "build_name": "WinSrv2019DCCore-BASE",
    "autounattend": "./base/answers/2019-DC-CORE/Autounattend.xml",
    "disk_size": "80000",
    "disk_type_id": "1",
    "disk_type_id_vmware": "0",
    "memory": "2048",
    "cpus": "1",
    "headless": "false",
    "iso_checksum": "221F9ACBC727297A56674A0F1722B8AC7B6E840B4E1FFBDD538A9ED0DA823562",
    "iso_checksum_type": "sha256",
    "iso_url": "https://software-download.microsoft.com/download/sg/17763.379.190312-0539.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us.iso",
    "vmware_tools_iso_path": ".\\base\\vmware-tools\\iso\\vmware-tools.iso",
    "winrm_timeout": "6h",
    "hyperv_switchname": "Default Switch",
    "vhv_enable": "false",
    "computer_name": "TM5",
    "admin_password": null
  }
}